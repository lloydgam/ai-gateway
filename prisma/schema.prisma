model UserRequest {
  id             String   @id @default(cuid())
  userApiKeyId   String
  userApiKey     UserApiKey @relation(fields: [userApiKeyId], references: [id])
  endpoint       String
  status         String
  costUsd        Decimal  @default(0)
  createdAt      DateTime @default(now())

  @@index([userApiKeyId, createdAt])
}
generator client {
  provider = "prisma-client-js"
}

model UserApiKey {
  id        String   @id @default(cuid())
  email     String   @unique
  firstname String
  lastname  String
  apiKeyHash String   @unique
  claudecodeUserKey String @unique
  aigatewayUserKey String @unique
  limitUsd  Decimal  @default(10)
  limitToken  Int  @default(10)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  requests  UserRequest[]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ApiKey {
  id              String   @id @default(cuid())
  name            String?
  keyHash         String   @unique
  isActive        Boolean  @default(true)
  monthlyLimitUsd Decimal  @default(0)
  createdAt       DateTime @default(now())
  lastUsedAt      DateTime?

  // REMOVE THIS LINE:
  // requests        Request[]
}

model Request {
  id               String   @id @default(cuid())
  apiKeyId         String

  requestedModel   String
  provider         String
  providerModel    String

  promptTokens     Int      @default(0)
  completionTokens Int      @default(0)
  totalTokens      Int      @default(0)

  // best-effort cost estimate
  costUsd          Decimal  @default(0)

  createdAt        DateTime @default(now())

  @@index([apiKeyId, createdAt])
}